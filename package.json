{
  "name": "inkjs",
  "version": "1.6.0",
  "description": "A javascript port of inkle's ink scripting language (http://www.inklestudios.com/ink/)",
  "main": "dist/ink-es2015.js",
  "scripts": {
    "test": "istanbul cover jasmine JASMINE_CONFIG_PATH=jasmine.config.json",
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "watch:test": "npm-watch test",
    "prepublish": "rollup -c"
  },
  "watch": {
    "test": {
      "patterns": [
        "tests/specs/*.js",
        "tests/inkfiles/*.*",
        "dist/*.js"
      ],
      "quiet": true
    }
  },
  "author": "Yannick Lohse",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "6.26.0",
    "babel-plugin-external-helpers": "6.22.0",
    "babel-plugin-transform-object-assign": "6.22.0",
    "babel-preset-env": "1.6.1",
    "istanbul": "0.4.5",
    "jasmine": "2.8.0",
    "npm-watch": "0.3.0",
    "rollup": "0.53.0",
    "rollup-plugin-babel": "3.0.3",
    "rollup-plugin-node-resolve": "3.0.0"
  },
  "dependencies": {}
}
