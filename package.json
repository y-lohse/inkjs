{
  "name": "inkjs",
  "version": "1.11.0",
  "description": "A javascript port of inkle's ink scripting language (http://www.inklestudios.com/ink/)",
  "main": "dist/ink-es2015.js",
  "types": "ink.d.ts",
  "scripts": {
    "test": "npm run-script test:typescript && npm run-script test:javascript",
    "test:typescript": "jest",
    "test:javascript": "npm run-script test:javascript:dist && npm run-script test:javascript:legacy",
    "test:javascript:dist": "INK_TEST=dist jest --config='jest.config.javascript.js'",
    "test:javascript:legacy": "INK_TEST=legacy jest --config='jest.config.javascript.js'",
    "test:compileFiles": "node tests/compile.js",
    "build": "tsc -p ./ && rollup -c",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "npm run lint -- --fix",
    "watch": "tsc -p ./ && rollup -c -w",
    "prepublishOnly": "tsc -p ./ && rollup -c"
  },
  "author": "Yannick Lohse",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.10.2",
    "@babel/plugin-transform-object-assign": "7.10.1",
    "@babel/preset-env": "7.10.2",
    "@types/jest": "26.0.0",
    "fs-extra": "9.0.1",
    "@typescript-eslint/eslint-plugin": "3.2.0",
    "@typescript-eslint/eslint-plugin-tslint": "3.2.0",
    "@typescript-eslint/parser": "3.2.0",
    "eslint": "7.2.0",
    "eslint-plugin-import": "2.21.2",
    "eslint-plugin-jsdoc": "27.0.6",
    "eslint-plugin-prefer-arrow": "1.2.1",
    "glob": "7.1.6",
    "jest": "26.0.1",
    "remap-istanbul": "0.13.0",
    "rollup": "2.15.0",
    "rollup-plugin-babel": "4.4.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-sourcemaps": "0.6.2",
    "rollup-plugin-terser": "6.1.0",
    "rollup-plugin-typescript2": "0.27.1",
    "rollup-plugin-uglify": "6.0.4",
    "ts-jest": "26.1.0",
    "tslint": "5.20.1",
    "typescript": "3.9.5",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.3",
    "prettier": "2.0.5"
  }
}
