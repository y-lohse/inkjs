{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "indent": [
            true,
            "tabs",
            4
        ],
        "linebreak-style": [
            true,
            "LF"
        ],
        "quotemark": [
            true,
            "single"
        ],
        "semicolon": [
            true,
            "always"
        ],
        "one-line": false,
        "curly": false,
        "triple-equals": false,
        "variable-name": [
            true,
            "check-format",
            "allow-leading-underscore"
        ],
        "no-namespace": false,
        "max-classes-per-file": false,
        "member-ordering": false,
        "radix": false,
        "prefer-for-of": false
    },
    "rulesDirectory": []
}
